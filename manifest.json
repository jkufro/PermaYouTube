{
  "manifest_version": 2,

  "name": "permaYouTube",
  "version": "1.3.0",
  "description": "Play your videos anywhere on YouTube.",

  "icons": { "128": "icon.png" },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "background": {
    "scripts": []
  },

  "content_scripts": [
    {
      "matches": ["http://*.youtube.com/*", "https://www.youtube.com/*"],
      "js": ["jquery-3.3.1.min.js", "jquery-ui.js", "PYT.js"],
      "css": ["jquery-ui.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "resizable.png"
  ],

  "permissions": ["http://*.youtube.com/*",
                  "https://www.youtube.com/*",
                  "storage"],

  "browser_action": {
    "default_title": "PYS",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}